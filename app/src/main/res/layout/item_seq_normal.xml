<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_of_10"
    android:paddingRight="@dimen/dp_of_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:paddingBottom="@dimen/dp_of_10"
        android:paddingTop="@dimen/dp_of_10">

        <FrameLayout
            android:layout_width="@dimen/dp_of_85"
            android:layout_height="@dimen/dp_of_85">

            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_goods_img" />

            <TextView
                android:id="@+id/tv_saleout_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/color_70percent"
                android:gravity="center"
                android:padding="@dimen/tv_padding"
                android:text="@string/miaosha_sale_out"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goodsname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="@string/nine"
                    android:textColor="@color/fh_red"
                    android:textSize="@dimen/sp_of_16" />

                <TextView
                    android:id="@+id/tv_btn"
                    android:layout_width="@dimen/dp_of_84"
                    android:layout_height="@dimen/dp_of_30"
                    android:background="@drawable/shape_redsolid_corner"
                    android:gravity="center"
                    android:text="@string/miaosha_rightnow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_of_6"
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_origin_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nine"
                    android:textColor="@color/color_bb"
                    android:textSize="@dimen/sp_of_11" />

                <TextView
                    android:id="@+id/tv_sales_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sale_percent"
                    android:textColor="@color/color_bb"
                    android:textSize="@dimen/sp_of_12" />

                <ProgressBar
                    android:layout_marginBottom="@dimen/dp_of_4"
                    android:layout_marginLeft="@dimen/dp_of_5"
                    android:id="@+id/pb_goods_percent"
                    android:progress="59"
                    android:max="100"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progressDrawable="@drawable/style_fh_progressbar"
                    android:layout_width="@dimen/dp_of_84"
                    android:layout_height="@dimen/dp_of_8" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />


</LinearLayout>