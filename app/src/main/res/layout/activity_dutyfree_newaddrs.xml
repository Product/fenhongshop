<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_89"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_of_12"
        android:paddingRight="@dimen/dp_of_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_44"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_red_star"
                android:gravity="center"
                android:maxLength="20"
                android:text="收货人："
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_15" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="请输入姓名"
                android:paddingLeft="@dimen/dp_of_20"
                android:textColorHint="@color/color_bb"
                android:textSize="@dimen/sp_of_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/color_e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_44"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_red_star"
                android:gravity="center"
                android:text="手机号码："
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_15" />

            <EditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:maxLength="11"
                android:background="@android:color/transparent"
                android:hint="请输入您的手机号码"
                android:paddingLeft="@dimen/dp_of_20"
                android:textColorHint="@color/color_bb"
                android:textSize="@dimen/sp_of_15" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_89"
        android:layout_marginTop="@dimen/dp_of_20"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_of_12"
        android:paddingRight="@dimen/dp_of_12">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_44"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_red_star"
                android:gravity="center"
                android:text="所在地区："
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_15" />

            <TextView
                android:id="@+id/tvArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/ic_arrow_right"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_of_20"
                android:textColorHint="@color/color_bb"
                android:textSize="@dimen/sp_of_15" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/color_e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_44"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_red_star"
                android:gravity="center"
                android:text="详细地址："
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_15" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/dp_of_20"
                android:textColorHint="@color/color_bb"
                android:textSize="@dimen/sp_of_15" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_40"
        android:layout_marginLeft="@dimen/dp_of_8"
        android:layout_marginRight="@dimen/dp_of_8"
        android:layout_marginTop="@dimen/dp_of_100"
        android:background="@drawable/shape_redsolid_corner"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/white" />
</LinearLayout>