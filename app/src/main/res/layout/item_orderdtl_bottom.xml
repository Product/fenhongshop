<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_of_15"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10"
        android:paddingTop="@dimen/dp_of_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品总额"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_13" />

            <TextView
                android:id="@+id/tvGoodsMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="¥620.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LPromotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_dutyfree_promotion"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_13" />

            <TextView
                android:id="@+id/tvDiscountTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:background="@drawable/shape_promotion"
                android:gravity="right"
                android:paddingBottom="@dimen/tv_padding_3"
                android:paddingLeft="@dimen/tv_padding_5"
                android:paddingRight="@dimen/tv_padding_5"
                android:paddingTop="@dimen/tv_padding_3"
                android:text="1-2万（9.0折）"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_11" />

            <TextView
                android:id="@+id/tvDiscountMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="-¥38.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LImport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_15"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvImportLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进口商品"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_13" />

            <TextView
                android:id="@+id/tvImportDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_12"
                android:background="@drawable/shape_promotion"
                android:paddingBottom="@dimen/tv_padding_3"
                android:paddingLeft="@dimen/tv_padding_5"
                android:paddingRight="@dimen/tv_padding_5"
                android:paddingTop="@dimen/tv_padding_3"
                android:text="9折优惠"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_11" />

            <TextView
                android:id="@+id/tvImportMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="-¥521.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_15"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvItemLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="优惠方式"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_13" />

            <TextView
                android:id="@+id/tvItemDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_12"
                android:background="@drawable/shape_promotion"
                android:paddingBottom="@dimen/tv_padding_3"
                android:paddingLeft="@dimen/tv_padding_5"
                android:paddingRight="@dimen/tv_padding_5"
                android:paddingTop="@dimen/tv_padding_3"
                android:text="限时优惠"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_11" />

            <TextView
                android:id="@+id/tvItemMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="-¥521.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额抵扣"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_13" />

            <TextView
                android:id="@+id/tvBalanceDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_12"
                android:text="(可用余额¥5000.00)"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_10" />

            <TextView
                android:id="@+id/tvBalanceMoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:text="-¥5000.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LFreight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_15"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:text="运费"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_12" />

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:layout_marginRight="@dimen/tv_padding"
                android:gravity="bottom"
                android:text="(900g)"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_12" />

            <TextView
                android:id="@+id/tvFreight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="¥9.09"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_12" />

            <ImageView
                android:id="@+id/ivFreight"
                android:layout_width="@dimen/dp_of_10"
                android:layout_height="@dimen/dp_of_10"
                android:layout_marginLeft="@dimen/tv_padding"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="税费"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_13" />

            <TextView
                android:id="@+id/tvTax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="¥0.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_48"
        android:layout_marginBottom="@dimen/dp_of_30"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPlatform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_platform_service"
            android:drawablePadding="@dimen/dp_of_10"
            android:text="平台服务"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="@dimen/dp_of_30"
            android:layout_marginLeft="@dimen/dp_of_40"
            android:layout_marginRight="@dimen/dp_of_40"
            android:background="@color/color_e3" />

        <TextView
            android:id="@+id/tvSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_seller_service"
            android:drawablePadding="@dimen/dp_of_10"
            android:text="联系卖家"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16" />
    </LinearLayout>

</LinearLayout>