<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_whitesolid_corner_8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dp_of_20"
        android:text="标题"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_16" />


    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dp_of_20"
        android:paddingLeft="@dimen/dp_of_20"
        android:paddingRight="@dimen/dp_of_20"
        android:text="小情歌"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_of_13" />

    <LinearLayout
        android:id="@+id/LCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_of_20"
        android:layout_marginLeft="@dimen/dp_of_20"
        android:layout_marginRight="@dimen/dp_of_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_popup_checkbox"
            android:checked="true" />

        <TextView
            android:id="@+id/tvLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_of_4"
            android:text="我已阅读并同意《XXX协议》"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_11" />
    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_40"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_whitesolid_corner_8dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14" />

        <TextView
            android:id="@+id/tvConfirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/shape_redsolid_rightbottom_corner_8dp"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>


</LinearLayout>