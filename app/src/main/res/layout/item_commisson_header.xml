<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  账户余额 menu 开始   -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_100"
        android:background="@color/color_lan"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_of_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_remain"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tvAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_15"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_25"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlWithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="@dimen/dp_of_20">

            <RelativeLayout
                android:layout_width="@dimen/dp_of_80"
                android:layout_height="@dimen/dp_of_25"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_white_stroke_corner"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_text_withdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/withdraw"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_12" />

                <TextView
                    android:id="@+id/tvIconWithdraw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_of_5"
                    android:layout_toLeftOf="@id/tv_text_withdraw"
                    android:text="@string/if_bank_card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_12" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <!--  账户余额 menu 结束   -->

    <!--立即提现 开始-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_90"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/account_in"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tvAccountIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_of_10"
                android:text="0.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_20" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_of_1"
            android:layout_height="@dimen/dp_of_50"
            android:layout_gravity="center_vertical"
            android:background="@color/com_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/account_out"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tvAccountOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_of_10"
                android:text="0.00"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_20" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_1"
        android:background="@color/com_bg" />
    <!--立即提现 结束-->

</LinearLayout>