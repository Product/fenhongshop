<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/dp_of_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_of_130"
            android:layout_height="@dimen/dp_of_130"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:layout_marginTop="@dimen/dp_of_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="3"
                android:ellipsize="end"
                android:text="喷雾剂同情啊商品"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_16" />

            <TextView
                android:id="@+id/tv_spec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_of_2"
                android:singleLine="true"
                android:text="规格"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_16"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_of_2"
                android:singleLine="true"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_16" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_1"
        android:background="@color/com_bg"/>
</LinearLayout>