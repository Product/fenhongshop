<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.fanglin.fhui.CircleImageView
                android:id="@+id/fiv_pic"
                android:layout_width="@dimen/dp_of_50"
                android:layout_height="@dimen/dp_of_50"
                android:layout_marginLeft="10dp"
                android:src="@drawable/default_avatar"
                app:border_color="@color/white"
                app:border_width="@dimen/line_width_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/LTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/tv_padding_4"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_of_18"
                        android:textStyle="normal"/>

                    <TextView
                        android:id="@+id/tv_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/tv_padding"
                        android:singleLine="true"
                        android:text="@string/if_vip"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_14"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding_4"
                    android:text="@string/share_mshop"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_14"/>
            </LinearLayout>

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/goods"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_120"
            android:layout_marginTop="@dimen/tv_padding_3"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:layout_marginTop="@dimen/tv_padding_3"
            android:background="@color/color_e3"/>
        <LinearLayout
            android:id="@+id/LIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_padding_3"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/LMicroshop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/tv_padding_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding_4"
                    android:text="@string/if_fancy_microshop"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_of_17"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding_4"
                    android:text="@string/explore_mshop"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_14"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_width_1"
                android:layout_height="@dimen/dp_of_14"
                android:background="@color/color_e3"/>
            <LinearLayout
                android:id="@+id/Lshare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/tv_padding_4">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding_4"
                    android:text="@string/if_share"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_of_17"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding_4"
                    android:text="@string/share_mshop"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_14"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_8"/>

</LinearLayout>