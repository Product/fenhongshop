<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_of_10">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/dp_of_55"
        android:layout_height="@dimen/dp_of_55"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_goods_img" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_12"
        android:ellipsize="end"
        android:lines="1"
        android:text="美食饮品"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_13" />
</LinearLayout>