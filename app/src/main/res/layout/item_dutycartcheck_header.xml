<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_of_10"
        android:paddingLeft="@dimen/dp_of_20"
        android:paddingRight="@dimen/dp_of_20"
        android:paddingTop="@dimen/dp_of_10">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dp_of_82"
            android:layout_height="@dimen/dp_of_82"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_goods_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="九朵云美白祛斑面霜 淡斑保湿提 亮面霜 50g"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_17"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="¥9900.00"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_13" />

                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="@dimen/dp_of_63"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="x1"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_13" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_of_10"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvActivityDesc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:text="VIP优惠"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/sp_of_10"
                        android:visibility="gone" />

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/tvAddr"
                        android:layout_width="@dimen/dp_of_63"
                        android:layout_height="@dimen/dp_of_20"
                        android:background="@drawable/shape_redsolid_corner"
                        android:gravity="center"
                        android:text="关联地址"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_of_11" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />
</LinearLayout>
