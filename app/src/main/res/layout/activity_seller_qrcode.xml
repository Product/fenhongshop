<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivQrcode"
            android:layout_width="@dimen/dp_of_280"
            android:layout_height="@dimen/dp_of_280"
            android:layout_marginTop="@dimen/dp_of_66"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_goods_img" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_of_25"
            android:layout_marginTop="@dimen/dp_of_40"
            android:contentDescription="@string/app_name"
            android:src="@drawable/login_logo" />
    </LinearLayout>


</ScrollView>