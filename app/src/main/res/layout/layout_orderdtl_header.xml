<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_110"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/dp_of_14"
                android:layout_height="@dimen/dp_of_10"
                android:gravity="center"
                android:text="@string/if_delivery"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_padding"
                android:text="@string/order_state"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_16" />

            <TextView
                android:id="@+id/tv_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:text="@string/zero"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_20"
                android:text="@string/order_id"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:text="@string/zero"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tv_order_id_copy"
                android:layout_width="@dimen/dp_of_40"
                android:layout_height="@dimen/dp_of_22"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:background="@drawable/shape_grey_stroke_corner"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="@color/color_bb"
                android:textSize="@dimen/sp_of_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_9"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_20"
                android:text="@string/zero"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_20"
                android:text="@string/zero"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_14" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_8"
        android:background="@color/com_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_padding_4"
            android:background="@drawable/repeate_spliter" />

        <LinearLayout
            android:id="@+id/LAddr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_120"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_of_10"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/tv_padding">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/if_account"
                            android:textColor="@color/fh_red"
                            android:textSize="@dimen/sp_of_15" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/tv_padding"
                            android:singleLine="true"
                            android:text="@string/app_name"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_of_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_of_40"
                            android:text="@string/if_phone"
                            android:textColor="@color/fh_red"
                            android:textSize="@dimen/sp_of_15" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/tv_padding"
                            android:singleLine="true"
                            android:text="@string/zero"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/sp_of_15" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/tv_padding"
                        android:singleLine="true"
                        android:text="@string/qingdao"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_of_15" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_2right"
                    android:textSize="@dimen/sp_of_15"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tv_padding_4"
            android:background="@drawable/repeate_spliter" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_8"
            android:layout_gravity="bottom"
            android:background="@color/com_bg" />
    </LinearLayout>
</LinearLayout>