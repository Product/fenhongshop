<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/LTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_46"
        android:background="@color/white"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/dp_of_46"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:contentDescription="@string/app_name"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/icon_back"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_20"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14"
                android:visibility="invisible" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/LGrp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LSea"
                android:layout_width="@dimen/dp_of_100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/cart_sea"
                    android:textColor="@color/selector_cart_txt_color"
                    android:textSize="@dimen/sp_of_18" />

                <ImageView
                    android:id="@+id/ivSea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_bottom_line"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LChina"
                android:layout_width="@dimen/dp_of_100"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/tv_padding"
                    android:text="@string/cart_china"
                    android:textColor="@color/selector_cart_txt_color"
                    android:textSize="@dimen/sp_of_18" />

                <ImageView
                    android:id="@+id/ivChina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cart_bottom_line"
                    android:contentDescription="@string/app_name"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_of_20">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/edit"
                android:textColor="@color/selector_red_c66"
                android:textSize="@dimen/sp_of_15"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="@dimen/dp_of_40"
                android:layout_height="@dimen/dp_of_20"
                android:layout_gravity="center"
                android:background="@drawable/selector_gray_border_red"
                android:gravity="center"
                android:text="@string/delete"
                android:textColor="@color/selector_grey_white_selected"
                android:textSize="@dimen/sp_of_14"
                android:visibility="gone" />
        </FrameLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />

    <LinearLayout
        android:id="@+id/LTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:layout_weight="1"
            android:padding="@dimen/tv_padding"
            android:text="@string/hint_cartsea"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_14" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="@dimen/dp_of_66"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_of_10"
            android:background="@drawable/shape_redstroke_corner"
            android:gravity="center"
            android:padding="@dimen/dp_of_2"
            android:text="@string/login"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/LCartHold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/LProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/com_bg"
                android:gravity="center"
                android:visibility="invisible">

                <ProgressBar style="@style/FHProgressBar" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llRrefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/ivRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/networkerror"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvRefresh"
                    android:layout_width="@dimen/reload_text_width"
                    android:layout_height="@dimen/reload_text_height"
                    android:layout_marginTop="@dimen/dp_of_50"
                    android:background="@drawable/shape_redstroke_corner"
                    android:gravity="center"
                    android:text="@string/load_again"
                    android:textColor="@color/fh_red" />
            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:id="@+id/LBotHold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>

</LinearLayout>