<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_136"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_newhome_banner" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_40"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/dp_of_80"
                    android:layout_marginRight="@dimen/dp_of_80"
                    android:layout_marginTop="@dimen/dp_of_10"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Linden Leaves"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_16" />

                <TextView
                    android:id="@+id/tvCollect"
                    android:visibility="invisible"
                    android:layout_width="@dimen/dp_of_65"
                    android:layout_height="@dimen/dp_of_18"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_of_12"
                    android:layout_marginTop="@dimen/dp_of_10"
                    android:background="@drawable/shape_redsolid_corner_share"
                    android:gravity="center"
                    android:text="+ 关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_12" />

            </FrameLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/dp_of_60"
            android:layout_height="@dimen/dp_of_60"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:background="@drawable/shape_grey_stroke"
            android:contentDescription="@string/app_name"
            android:padding="@dimen/line_width"
            android:src="@drawable/default_goods_img"
            android:visibility="visible" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dp_of_10">

        <ImageView
            android:id="@+id/ivNation"
            android:layout_width="@dimen/dp_of_20"
            android:layout_height="@dimen/dp_of_14"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/default_banner" />

        <TextView
            android:id="@+id/tvNation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_5"
            android:text="韩国品牌"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_goodsonsale"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19859"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_goodsnum_affix"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_8"
        android:drawablePadding="@dimen/dp_of_13"
        android:lineSpacingMultiplier="1.2"
        android:drawableBottom="@drawable/icon_triangle_gray_down"
        android:padding="@dimen/dp_of_8"
        android:text="在过去的30年中，巴迪亚香料给市场带来了最好的原料来自世界的各个角落，成为厨师的每一类型中最喜欢的，从新手到美食家。香味浓郁，香气和颜色丰富，我们的产品在口味上都是有价值的。"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_of_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_10"
        android:background="@color/com_bg" />
</LinearLayout>