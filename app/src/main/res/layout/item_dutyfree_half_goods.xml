<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/dp_of_136"
        android:layout_height="@dimen/dp_of_136"
        android:contentDescription="@string/app_name"
        android:src="@drawable/default_goods_img" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_10"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:text="it s skin/伊思"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_13" />

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_10"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="2"
        android:text="晶钻蜗牛眼膜贴眼霜 淡化细 纹眼袋紧致"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_of_12" />

    <FrameLayout
        android:id="@+id/FVIP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_padding"
        android:paddingLeft="@dimen/tv_padding_2"
        android:paddingRight="@dimen/tv_padding_2">

        <TextView
            android:id="@+id/tvVIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="¥128.00"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_14" />

        <TextView
            android:id="@+id/tvFlag"
            android:layout_width="@dimen/dp_of_45"
            android:layout_height="@dimen/dp_of_15"
            android:layout_gravity="right"
            android:background="@drawable/shape_redstroke_corner"
            android:gravity="center"
            android:text="@string/lbl_vip_price"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_11" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_10"
        android:gravity="center"
        android:lines="1"
        android:ellipsize="end"
        android:text="$22 (约¥183.00)"
        android:textColor="@color/fh_red"
        android:textSize="@dimen/sp_of_13" />
</LinearLayout>