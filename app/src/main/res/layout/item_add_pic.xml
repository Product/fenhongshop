<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/FICON"
        android:layout_width="@dimen/dp_of_100"
        android:layout_height="@dimen/dp_of_100"
        android:layout_margin="@dimen/tv_padding_5">
        <ImageView
            android:id="@+id/fiv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_goods_img"/>
        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/tv_padding_5"
            android:gravity="center"
            android:text="@string/if_close"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_20"
            android:visibility="gone"/>
    </FrameLayout>


</LinearLayout>