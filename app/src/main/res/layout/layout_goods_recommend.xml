<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_46"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/tv_padding">

        <TextView
            android:layout_width="@dimen/tv_padding_4"
            android:layout_height="@dimen/dp_of_16"
            android:background="@color/fh_red"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding_4"
            android:text="@string/guess_you_like"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:background="@color/color_e3"/>

    <com.fanglin.fhui.ListViewinScroll
        android:id="@+id/goods_flow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@android:color/transparent"/>

</LinearLayout>