<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAddressShow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_of_12"
    android:paddingRight="@dimen/dp_of_12"
    android:paddingTop="@dimen/dp_of_15">

    <TextView
        android:id="@+id/tvAddressName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_of_20"
        android:drawablePadding="@dimen/dp_of_10"
        android:text="张宝宝        156****5775"
        android:textSize="@dimen/sp_of_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_of_15">

        <TextView
            android:id="@+id/tvAddr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="@dimen/dp_of_20"
            android:paddingTop="@dimen/dp_of_15"
            android:text="山东省青岛市市南区软件园7号楼7楼 芳林信息"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_12" />

        <TextView
            android:id="@+id/tvEdit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_of_20"
            android:drawableLeft="@drawable/icon_edit_talent"
            android:drawablePadding="@dimen/tv_padding_4"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14"
            android:visibility="invisible" />

    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />
</LinearLayout>