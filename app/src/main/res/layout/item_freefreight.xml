<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fiv_pic"
                android:contentDescription="@string/qrcode_cancel"
                android:layout_width="@dimen/dp_of_120"
                android:layout_height="@dimen/dp_of_120"
                android:scaleType="fitXY"
                android:src="@drawable/default_goods_img" />

            <ImageView
                android:contentDescription="@string/qrcode_cancel"
                android:id="@+id/iv_top"
                android:layout_width="@dimen/dp_of_80"
                android:layout_height="@dimen/dp_of_80"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp_of_10">

            <LinearLayout
                android:id="@+id/LGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_flag"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_banner"
                    android:layout_width="@dimen/dp_of_20"
                    android:layout_height="@dimen/dp_of_14"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/tv_global"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_5"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/goods_recommend_tips"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_16"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/LIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_of_120"
                    android:singleLine="true"
                    android:text="9"
                    android:textColor="@color/fh_red"
                    android:textSize="@dimen/sp_of_15" />

                <TextView
                    android:id="@+id/tv_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_7"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/num_buy"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_13" />

                <ImageView
                    android:id="@+id/tv_addcart"
                    android:contentDescription="@string/qrcode_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_of_11"
                    android:src="@drawable/add_to_cart"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_flag_global"
        android:contentDescription="@string/qrcode_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_of_10"
        android:src="@drawable/flag_global"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:layout_gravity="bottom"
        android:background="@color/color_e3" />
</FrameLayout>