<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/FBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fiv_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_175"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/default_fancy_banner"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_of_10">

            <LinearLayout
                android:layout_width="@dimen/dp_of_76"
                android:layout_height="@dimen/dp_of_76"
                android:background="@drawable/shape_avatar_circle"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.fanglin.fhui.CircleImageView
                    android:id="@+id/sdv"
                    android:layout_width="@dimen/dp_of_63"
                    android:layout_height="@dimen/dp_of_63"
                    android:src="@drawable/default_avatar"
                    app:border_color="@color/white"
                    app:border_width="@dimen/line_width_1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_10"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/qingdao"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_18"/>

                <TextView
                    android:id="@+id/tv_vip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/tv_padding"
                    android:singleLine="true"
                    android:text="@string/if_vip"
                    android:textColor="@color/fh_red"
                    android:textSize="@dimen/sp_of_14"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_10"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14"/>
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:background="@color/color_e3"/>
</LinearLayout>