<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_20">

        <ImageView
            android:layout_width="wrap_content"
            android:contentDescription="@string/qrcode_cancel"
            android:layout_height="wrap_content"
            android:src="@drawable/img_microshop_tips" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_20"
            android:gravity="center"
            android:text="@string/tips_microshop"
            android:textColor="@color/color_33" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_of_10">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_width"
            android:layout_weight="1"
            android:background="@color/color_e3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:layout_marginRight="@dimen/dp_of_10"
            android:gravity="center"
            android:text="@string/tips_microshop_split"
            android:textColor="@color/color_33" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/line_width"
            android:layout_weight="1"
            android:background="@color/color_e3" />

    </LinearLayout>
</LinearLayout>