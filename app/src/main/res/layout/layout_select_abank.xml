<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="@dimen/dp_of_300"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_whitesolid_corner"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_a_bank"
            android:textSize="@dimen/sp_of_16"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:layout_marginBottom="@dimen/dp_of_10"
            android:layout_marginTop="@dimen/dp_of_10"
            android:background="@color/color_e3"/>

        <com.fanglin.fhui.datapicker.NumberPicker
            android:id="@+id/picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:maxHeight="@dimen/dp_of_75"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:layout_marginTop="@dimen/dp_of_10"
            android:background="@color/color_e3"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_of_110"
                android:layout_height="@dimen/dp_of_35"
                android:layout_marginLeft="@dimen/tv_padding"
                android:background="@drawable/shape_grey_stroke_corner"
                android:gravity="center"
                android:text="@android:string/cancel"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_14"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_of_1"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="@dimen/dp_of_110"
                android:layout_height="@dimen/dp_of_35"
                android:layout_marginRight="@dimen/tv_padding"
                android:background="@drawable/selector_btn_red_corner"
                android:gravity="center"
                android:text="@android:string/ok"
                android:textColor="@color/selector_btn_red_color"
                android:textSize="@dimen/sp_of_14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>