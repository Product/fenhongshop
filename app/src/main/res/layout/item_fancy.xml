<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fiv_pic"
        android:contentDescription="@string/qrcode_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/default_left_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_of_180"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:contentDescription="@string/qrcode_cancel"
                android:id="@+id/iv_top"
                android:layout_width="@dimen/dp_of_80"
                android:layout_height="@dimen/dp_of_80" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dp_of_10">

            <LinearLayout
                android:id="@+id/LGlobal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_flag"
                    android:layout_width="@dimen/dp_of_20"
                    android:layout_height="@dimen/dp_of_14"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_banner" />

                <TextView
                    android:id="@+id/tv_global"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tv_padding"
                    android:layout_weight="1"
                    android:paddingBottom="@dimen/tv_padding_3"
                    android:paddingTop="@dimen/tv_padding_3"
                    android:singleLine="true"
                    android:text="@string/goods_recommend_tips"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_15" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:paddingBottom="@dimen/tv_padding_3"
                android:text="@string/app_name"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_16"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/LIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:singleLine="true"
                        android:text="@string/nine"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_20"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_memo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="@dimen/tv_padding"
                        android:singleLine="true"
                        android:text="@string/num_buy"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_of_14"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_addcart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/tv_padding"
                    android:gravity="center"
                    android:text="@string/if_add_cart"
                    android:textSize="@dimen/sp_of_30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_flag_global"
        android:contentDescription="@string/qrcode_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_of_10"
        android:src="@drawable/flag_global"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:layout_gravity="bottom"
        android:background="@color/color_e3" />
</FrameLayout>