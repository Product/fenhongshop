<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_75"
        android:background="@color/com_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_of_15"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10"
        android:paddingTop="@dimen/dp_of_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_account_red"
                android:drawablePadding="@dimen/tv_padding"
                android:text="王先生"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_15" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_30"
                android:drawableLeft="@drawable/icon_phone_red"
                android:drawablePadding="@dimen/tv_padding"
                android:text="156****6987"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_15" />

            <TextView
                android:id="@+id/tvNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="X3"
                android:textColor="@color/color_66"
                android:textSize="@dimen/sp_of_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_10"
            android:ellipsize="end"
            android:lines="1"
            android:text="山东省 青岛市 市南区 软件园7号楼7楼 芳林信息"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_bg"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_of_10"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10"
        android:visibility="visible">

        <TextView
            android:id="@+id/tvLeft"
            android:layout_width="@dimen/dp_of_90"
            android:layout_height="@dimen/dp_of_24"
            android:background="@drawable/shape_redsolid_corner"
            android:gravity="center"
            android:text="查看物流"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_13" />

        <TextView
            android:id="@+id/tvRight"
            android:layout_width="@dimen/dp_of_90"
            android:layout_height="@dimen/dp_of_24"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:background="@drawable/shape_redsolid_corner"
            android:gravity="center"
            android:text="确认收货"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_13" />
    </LinearLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_8"
        android:background="@color/white" />
</LinearLayout>