<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_of_280"
    android:background="@color/white"
    android:padding="@dimen/dp_of_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_13">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dp_of_150"
            android:layout_height="@dimen/dp_of_150"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_goods_img" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivNation"
            android:layout_width="@dimen/dp_of_20"
            android:layout_height="@dimen/dp_of_14"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/default_banner" />

        <TextView
            android:id="@+id/tvNation"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_padding"
            android:text="韩国直邮 正品保证"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:lines="2"
        android:ellipsize="end"
        android:paddingBottom="@dimen/dp_of_1"
        android:paddingTop="@dimen/dp_of_1"
        android:text="ORIHIRO 进口低分子玻尿酸胶原蛋白180g/袋"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_20"
        android:layout_marginTop="@dimen/tv_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="¥1105"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMarketPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="¥1215"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_13" />


    </LinearLayout>

</LinearLayout>