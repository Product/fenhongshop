<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_platform_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/platform_service"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_16"/>

        <View
            android:layout_width="@dimen/dp_of_1"
            android:layout_height="@dimen/dp_of_30"
            android:background="@color/com_bg"/>

        <TextView
            android:id="@+id/tv_contact_seller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/contact_seller"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_16"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_bg"
        android:paddingTop="@dimen/dp_of_40"
        android:paddingBottom="@dimen/dp_of_22"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_apply_refund"
            android:layout_width="@dimen/dp_of_250"
            android:layout_height="@dimen/dp_of_30"
            android:background="@drawable/shape_only_grey_stroke_corner"
            android:gravity="center"
            android:text="@string/apply_refund"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14"/>
    </LinearLayout>

</LinearLayout>