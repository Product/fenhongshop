<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_15">

        <ImageView
            android:id="@+id/ivMsg"
            android:layout_width="@dimen/dp_of_80"
            android:layout_height="@dimen/dp_of_40"
            android:layout_marginLeft="@dimen/dp_of_9"
            android:contentDescription="@string/a_time"
            android:scaleType="fitXY"
            android:src="@drawable/default_banner" />

        <TextView
            android:id="@+id/tvPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_17"
            android:layout_toRightOf="@+id/ivMsg"
            android:text="152****3233"
            android:textColor="@color/color_33"
            android:textSize="@dimen/dp_of_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPhoneNum"
            android:layout_marginLeft="@dimen/dp_of_17"
            android:layout_marginTop="@dimen/dp_of_14"
            android:layout_toRightOf="@+id/ivMsg"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="@dimen/dp_of_9"
                android:layout_height="@dimen/dp_of_9"
                android:layout_gravity="center"
                android:background="@drawable/clock" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.12.26"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_10" />
        </LinearLayout>

        <TextView

            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:text="Â¥18.00"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_12" />
    </RelativeLayout>
</LinearLayout>