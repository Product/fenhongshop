<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/tv_padding"
        android:layout_marginLeft="@dimen/dp_of_12"
        android:layout_marginRight="@dimen/dp_of_12"
        android:layout_marginTop="@dimen/dp_of_12"
        android:drawableRight="@drawable/icon_layout_close"
        android:text="@string/title_of_pick_address"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_15" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_120"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10"
        android:scrollbars="none" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_of_8"
        android:background="@drawable/shape_redsolid_corner"
        android:padding="@dimen/dp_of_12"
        android:text="@string/lbl_add_address"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_of_17" />
</LinearLayout>