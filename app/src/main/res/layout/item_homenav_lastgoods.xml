<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivFlag"
            android:layout_width="@dimen/dp_of_20"
            android:layout_height="@dimen/dp_of_14"
            android:layout_marginLeft="@dimen/dp_of_8"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/default_banner" />

        <TextView
            android:id="@+id/tvFlag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_6"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_13" />

        <LinearLayout
            android:id="@+id/LShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_of_10"
            android:background="@drawable/bg_goods_share"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvShareIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/if_share"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tvShareWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/tv_padding_4"
                android:singleLine="true"
                android:text="@string/fmt_sharewin"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_12" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/ivGoodsImage"
        android:layout_width="@dimen/dp_of_225"
        android:layout_height="@dimen/dp_of_225"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_of_15"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/default_goods_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_homenav_addcart"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/if_release"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_5"
                android:text="$99.99"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_16" />

            <TextView
                android:id="@+id/tvShareDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/tv_padding"
                android:text="/ è¿”10%"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_11" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_of_20"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHeart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/if_love_empty"
                android:textColor="@color/color_bb"
                android:textSize="@dimen/sp_of_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99+"
                android:textColor="@color/color_bb"
                android:textSize="@dimen/sp_of_12" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvGoodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_of_8"
        android:layout_marginRight="@dimen/dp_of_8"
        android:layout_marginTop="@dimen/dp_of_24"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvGoodsDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_of_8"
        android:layout_marginRight="@dimen/dp_of_8"
        android:layout_marginTop="@dimen/dp_of_8"
        android:maxLines="3"
        android:ellipsize="end"
        android:text="@string/share_home_title"
        android:textColor="@color/color_66"
        android:textSize="@dimen/sp_of_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginLeft="@dimen/dp_of_8"
        android:layout_marginRight="@dimen/dp_of_8"
        android:layout_marginTop="@dimen/dp_of_30"
        android:background="#E3E3E3" />
</LinearLayout>