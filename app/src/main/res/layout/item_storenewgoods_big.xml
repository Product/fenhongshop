<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/dp_of_10">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_of_150"
                android:layout_height="@dimen/dp_of_150"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_goods_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_5"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivNation"
                        android:layout_width="@dimen/dp_of_20"
                        android:layout_height="@dimen/dp_of_14"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/default_goods_img" />

                    <TextView
                        android:id="@+id/tvNation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/tv_padding"
                        android:singleLine="true"
                        android:text="@string/app_name"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_of_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="3"
                    android:ellipsize="end"
                    android:paddingTop="@dimen/dp_of_1"
                    android:text="ORIHIRO 进口低分子玻尿酸胶原蛋白180g/袋"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_15"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="¥1105"
                    android:textColor="@color/fh_red"
                    android:textSize="@dimen/sp_of_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPriceMarket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:singleLine="true"
                    android:text="¥1215"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_13" />

                <TextView
                    android:id="@+id/tvRewardRatio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:singleLine="true"
                    android:text="返10%"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_12" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_of_10"
            android:background="@drawable/bg_goods_share"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:visibility="visible">

            <TextView
                android:id="@+id/tvShareIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/if_share"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14" />

            <TextView
                android:id="@+id/tvShareWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/tv_padding_4"
                android:singleLine="true"
                android:text="@string/fmt_sharewin"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_12" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tv_padding"
        android:background="@color/com_bg" />
</LinearLayout>