<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:contentDescription="@string/qrcode_cancel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_loading" />

    <FrameLayout
        android:id="@+id/FADV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_adv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_of_10"
            android:background="@drawable/shape_blacktransparet_solid_corner"
            android:gravity="center_vertical"
            android:padding="@dimen/tv_padding"
            android:text="@string/jump_after_3s"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_14" />
    </FrameLayout>


</FrameLayout>