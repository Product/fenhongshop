<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/FTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_45"
            android:gravity="center"
            android:text="@string/hsrate"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_18" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp_of_10"
            android:text="@string/if_close"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_20" />
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:background="@color/color_e3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LTax"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_50"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/dp_of_10">

            <TextView
                android:id="@+id/tv_taxfee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_of_20"
                android:gravity="center"
                android:text="@string/zero"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_16" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:background="@color/color_e3" />

        <TextView
            android:id="@+id/tv_hsrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_of_40"
            android:padding="@dimen/dp_of_10"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>


</LinearLayout>