<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_of_10">

            <FrameLayout
                android:layout_width="@dimen/dp_of_100"
                android:layout_height="@dimen/dp_of_100">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_goods_img" />

                <ImageView
                    android:id="@+id/ivTop"
                    android:layout_width="@dimen/dp_of_60"
                    android:layout_height="@dimen/dp_of_60"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/ivNation"
                        android:layout_width="@dimen/dp_of_20"
                        android:layout_height="@dimen/dp_of_14"
                        android:contentDescription="@string/app_name"
                        android:scaleType="fitXY"
                        android:src="@drawable/default_banner" />

                    <TextView
                        android:id="@+id/tvNation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_of_6"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="韩国直邮 正品保证"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_of_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_padding"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="ORIHIRO 进口低分子玻尿酸胶原蛋白太胶原蛋白粉 180g/袋"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_14"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_padding"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/dp_of_5"
                        android:singleLine="true"
                        android:text="¥1105"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMarketPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_of_10"
                        android:singleLine="true"
                        android:text="¥1215"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_of_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_padding"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvRewordMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:singleLine="true"
                        android:text="赚 14.90"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRewardRatio"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_of_10"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="返10%"
                        android:textColor="@color/color_99"
                        android:textSize="@dimen/sp_of_12" />

                    <TextView
                        android:id="@+id/tvShare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="@dimen/dp_of_20"
                        android:background="@drawable/shape_redsolid_corner_share"
                        android:gravity="center"
                        android:paddingBottom="@dimen/dp_of_2"
                        android:paddingLeft="@dimen/tv_padding"
                        android:paddingRight="@dimen/tv_padding"
                        android:paddingTop="@dimen/dp_of_2"
                        android:singleLine="true"
                        android:text="分享赚钱"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_of_10"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/ivFlagGlobal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/flag_global"
            android:visibility="visible" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_10" />
</LinearLayout>

