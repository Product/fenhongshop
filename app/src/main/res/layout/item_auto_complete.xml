<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_search_small_gray"
        android:drawablePadding="@dimen/tv_padding"
        android:padding="@dimen/dp_of_12"
        android:text="@string/app_name"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_13" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_1"
        android:layout_marginLeft="@dimen/tv_padding"
        android:layout_marginRight="@dimen/tv_padding"
        android:background="@color/color_e3" />
</LinearLayout>