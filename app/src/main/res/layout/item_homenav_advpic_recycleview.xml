<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iV0"
        android:layout_width="@dimen/dp_of_375"
        android:layout_height="@dimen/dp_of_230"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/default_newhome_banner" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_170" />

    <View
        android:id="@+id/vDash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_1"
        android:layerType="software"
        android:background="@drawable/shape_dash" />

    <LinearLayout
        android:id="@+id/LShare"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_40"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_of_15"
        android:paddingRight="@dimen/dp_of_15"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_win_money" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/tv_padding"
            android:layout_marginRight="@dimen/tv_padding"
            android:text="|"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_10" />

        <TextView
            android:id="@+id/tvShareWin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="最高赚20%"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_10" />

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:background="@drawable/shape_redsolid_corner_share"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_of_2"
            android:paddingLeft="@dimen/tv_padding"
            android:paddingRight="@dimen/tv_padding"
            android:paddingTop="@dimen/dp_of_2"
            android:singleLine="true"
            android:text="分享赚钱"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_10"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_10"
        android:background="@color/com_bg"
        android:visibility="gone" />
</LinearLayout>