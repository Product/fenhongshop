<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LMore"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_42"
        android:background="@color/white"
        android:gravity="center">

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/tv_padding"
            android:drawableRight="@drawable/selector_expander_red"
            android:text="查看更多"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_10"
        android:background="@color/com_bg" />
</LinearLayout>