<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <FrameLayout
        android:id="@+id/FTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_45"
            android:gravity="center"
            android:text="@string/select_a_bankcard"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_18"/>

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_of_10"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/if_close"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_20"/>
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:background="@color/color_e3"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.fanglin.fhui.ListViewinScroll
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@android:color/transparent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width_1"
                android:background="@color/color_e3"/>

            <LinearLayout
                android:id="@+id/LAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp_of_10">

                <TextView
                    android:id="@+id/tv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_add"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_25"/>

                <TextView
                    android:id="@+id/tv_cardinfo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:layout_weight="1"
                    android:text="@string/add_a_bankcard"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_16"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/if_2right"
                    android:textSize="@dimen/sp_of_12"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width_1"
                android:background="@color/color_e3"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>