<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_of_250"
        android:layout_height="@dimen/dp_of_150"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/tvOK"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="#ED3E80"
                android:textSize="@dimen/sp_of_20" />

            <TextView
                android:id="@+id/tvCancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#ED3E80"
                android:textSize="@dimen/sp_of_20" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="你确认删除吗？"
            android:textColor="#ED3E80" />

        <TextView
            android:id="@+id/tvIcon"
            android:layout_width="@dimen/dp_of_30"
            android:layout_height="@dimen/dp_of_30"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:text="@string/if_why"
            android:textColor="#ED3E80" />
    </RelativeLayout>
</LinearLayout>