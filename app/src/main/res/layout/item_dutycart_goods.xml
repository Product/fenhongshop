<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.fanglin.fhui.FHSwipeLayout
        android:id="@+id/mSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_106"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_of_12"
            android:paddingTop="@dimen/dp_of_12">

            <ImageView
                android:id="@+id/ivCheck"
                android:layout_width="@dimen/dp_of_50"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:scaleType="center"
                android:src="@drawable/selector_checkbox" />

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/dp_of_82"
                android:layout_height="@dimen/dp_of_82"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_goods_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_27"
                android:layout_marginRight="@dimen/dp_of_12"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="九朵云美白祛斑面霜 淡斑保湿提 亮面霜 50g"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:lines="1"
                            android:text="¥9900.00"
                            android:textColor="@color/fh_red"
                            android:textSize="@dimen/sp_of_13" />

                        <TextView
                            android:id="@+id/tvActivityDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_of_2"
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/color_66"
                            android:textSize="@dimen/sp_of_10"
                            android:visibility="gone" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_stroke"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvMinus"
                            android:layout_width="@dimen/dp_of_30"
                            android:layout_height="@dimen/dp_of_30"
                            android:gravity="center"
                            android:text="-"
                            android:textColor="@color/color_66" />

                        <View
                            android:layout_width="@dimen/line_width"
                            android:layout_height="match_parent"
                            android:background="@color/color_e3" />

                        <TextView
                            android:id="@+id/tvNum"
                            android:layout_width="@dimen/dp_of_50"
                            android:layout_height="@dimen/dp_of_30"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/one"
                            android:textColor="@color/color_66"
                            android:textSize="@dimen/sp_of_16" />

                        <View
                            android:layout_width="@dimen/line_width"
                            android:layout_height="match_parent"
                            android:background="@color/color_e3" />

                        <TextView
                            android:id="@+id/tvPlus"
                            android:layout_width="@dimen/dp_of_30"
                            android:layout_height="@dimen/dp_of_30"
                            android:gravity="center"
                            android:text="+"
                            android:textColor="@color/color_66" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_of_75"
            android:layout_height="@dimen/dp_of_106">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fh_red"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_of_20"
                android:paddingRight="@dimen/dp_of_20"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_16" />
        </LinearLayout>
    </com.fanglin.fhui.FHSwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginLeft="@dimen/dp_of_12"
        android:layout_marginRight="@dimen/dp_of_12"
        android:background="@color/color_e3" />
</LinearLayout>