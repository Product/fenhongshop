<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/bg_microshop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_of_15"
        android:gravity="center"
        android:orientation="horizontal">

        <com.fanglin.fhui.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="@dimen/dp_of_66"
            android:layout_height="@dimen/dp_of_66"
            android:layout_marginLeft="@dimen/dp_of_20"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_avatar"
            android:visibility="visible"
            app:border_color="@color/white"
            app:border_width="@dimen/dp_of_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微店名称"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tvDesc"
                android:layout_marginTop="@dimen/dp_of_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="程序猿的世界最美不过Hello World"
                android:textColor="@color/white" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_of_20"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow_right" />
    </LinearLayout>
</FrameLayout>