<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_45"
        android:gravity="center"
        android:text="@string/goods_detail_prom_title_mansong"
        android:textSize="@dimen/sp_of_18"
        android:textColor="@color/color_33"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:background="@color/color_e3"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="@dimen/dp_of_150" />

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_46"
        android:background="@color/fh_red"
        android:gravity="center"
        android:text="@string/close"
        android:textSize="@dimen/sp_of_16"
        android:textColor="@color/white"
        android:textStyle="bold"/>

</LinearLayout>