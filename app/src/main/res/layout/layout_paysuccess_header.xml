<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/mheader"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_25">

        <TextView
            android:id="@+id/tv_icon_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_success"
            android:textColor="@color/color_lv"
            android:textSize="@dimen/sp_of_56"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_10"
            android:text="@string/lbl_pay_success"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14"/>

        <TextView
            android:id="@+id/tv_pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/lbl_pay_success"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="@dimen/dp_of_80"
                android:layout_height="@dimen/dp_of_30"
                android:background="@drawable/shape_yellowsolid_corner"
                android:gravity="center"
                android:text="@string/goto_order_dtl"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14"/>

            <TextView
                android:id="@+id/tv_close"
                android:layout_width="@dimen/dp_of_80"
                android:layout_height="@dimen/dp_of_30"
                android:layout_marginLeft="@dimen/dp_of_40"
                android:background="@drawable/shape_redsolid_corner"
                android:gravity="center"
                android:text="@string/buy_go_on"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_of_20"
        android:text="@string/pay_success_goods_recommend"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_14"/>
</LinearLayout>