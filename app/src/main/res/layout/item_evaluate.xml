<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_of_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_store"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_18"/>

        <TextView
            android:id="@+id/tv_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding_4"
            android:text="@string/store"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_2right"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_12"/>

        <TextView
            android:id="@+id/tv_statu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/tv_padding_4"
            android:text="@string/zero"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_15"/>
    </LinearLayout>

    <View
        android:id="@+id/vicon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:layout_marginLeft="@dimen/dp_of_10"
        android:layout_marginRight="@dimen/dp_of_10"
        android:background="@color/color_e3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LGoods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dp_of_10">

            <ImageView
                android:id="@+id/sdv"
                android:layout_width="@dimen/dp_of_60"
                android:layout_height="@dimen/dp_of_60"
                android:scaleType="fitXY"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_goods_img"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:paddingBottom="@dimen/tv_padding"
                    android:text="@string/app_name"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_16"
                    android:textStyle="normal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:text="@string/zero"
                        android:textColor="@color/fh_red"
                        android:textSize="@dimen/sp_of_16"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_width="@dimen/dp_of_90"
                        android:layout_height="@dimen/dp_of_34"
                        android:background="@drawable/shape_redsolid_corner"
                        android:gravity="center"
                        android:text="@string/do_order_evaluate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_of_14"
                        android:visibility="visible"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <View
            android:id="@+id/vline"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_8"/>

        <LinearLayout
            android:id="@+id/LBot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tv_padding"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="@dimen/dp_of_10"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_padding"
                    android:gravity="top"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/eva_desc_score"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_of_16"/>

                    <RatingBar
                        android:id="@+id/rating_desc"
                        style="@style/FHRatingbarEVA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_of_10"
                        android:rating="5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_padding"
                    android:gravity="top"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/eva_service_score"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_of_16"/>

                    <RatingBar
                        android:id="@+id/rating_service"
                        style="@style/FHRatingbarEVA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_of_10"
                        android:rating="5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/tv_padding"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/eva_release_score"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_of_16"/>

                    <RatingBar
                        android:id="@+id/rating_release"
                        style="@style/FHRatingbarEVA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_of_10"
                        android:rating="5"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_shop_eva"
                android:layout_width="@dimen/dp_of_90"
                android:layout_height="@dimen/dp_of_34"
                android:layout_gravity="bottom|right"
                android:background="@drawable/shape_redsolid_corner"
                android:gravity="center"
                android:text="@string/shop_eva"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>