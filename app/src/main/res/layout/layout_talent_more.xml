<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_of_5"
        android:background="@drawable/talent_list_more"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="@dimen/dp_of_90"
            android:layout_height="@dimen/dp_of_30"
            android:gravity="center"
            android:text="@string/share"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="@color/color_e3" />

        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="@dimen/dp_of_90"
            android:layout_height="@dimen/dp_of_30"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>
</LinearLayout>