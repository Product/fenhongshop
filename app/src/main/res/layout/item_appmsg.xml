<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <ImageView
        android:id="@+id/fiv"
        android:contentDescription="@string/qrcode_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_125"
        android:scaleType="fitXY"
        android:src="@drawable/default_msg_center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_10"
            android:text="@string/app_name"
            android:textColor="@color/color_99"
            android:textSize="@dimen/sp_of_13"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:layout_marginBottom="@dimen/dp_of_10"
            android:layout_marginTop="@dimen/dp_of_10"
            android:background="@color/color_e3"/>

        <LinearLayout
            android:id="@+id/LIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/a_time"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_13"/>
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/line_width"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/view_dtl"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_13"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:text="@string/if_2right"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_12"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_8"
        android:background="@color/com_bg"/>
</LinearLayout>