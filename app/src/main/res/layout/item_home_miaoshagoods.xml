<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_of_10"
        android:layout_marginLeft="@dimen/dp_of_10"
        android:layout_marginRight="@dimen/dp_of_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/miaosha_point"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvReadyToRob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/ready_to_rob"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_12" />

        <TextView
            android:id="@+id/tvCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_5"
            android:text=" "
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10"
        android:paddingTop="@dimen/dp_of_5">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp_of_90"
                    android:layout_height="@dimen/dp_of_90"
                    android:layout_marginTop="@dimen/dp_of_10"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_goods_img" />

                <TextView
                    android:id="@+id/tvLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_of_10"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="It's Skin伊思 \n美肌红参蜗牛BB霜50ML 保湿裸妆"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_13" />

                <TextView
                    android:id="@+id/tvMarketPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_of_5"
                    android:text="¥330.00"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_12" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>