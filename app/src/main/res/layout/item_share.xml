<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_of_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_90"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fiv"
            android:layout_width="@dimen/dp_of_90"
            android:layout_height="@dimen/dp_of_90"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"
            android:src="@drawable/default_goods_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:ellipsize="end"
                android:text="@string/a_time"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14" />

            <LinearLayout
                android:id="@+id/LIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_moments"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/if_wechat_moments"
                    android:textColor="@color/selector_refund_proces_grey_red_selected"
                    android:textSize="@dimen/sp_of_20" />

                <TextView
                    android:id="@+id/tv_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:text="@string/if_wechat"
                    android:textColor="@color/selector_refund_proces_grey_red_selected"
                    android:textSize="@dimen/sp_of_20" />

                <TextView
                    android:id="@+id/tv_qzone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:text="@string/if_qzone"
                    android:textColor="@color/selector_refund_proces_grey_red_selected"
                    android:textSize="@dimen/sp_of_20" />

                <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:text="@string/if_qq"
                    android:textColor="@color/selector_refund_proces_grey_red_selected"
                    android:textSize="@dimen/sp_of_20" />

                <TextView
                    android:id="@+id/tv_weibo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:text="@string/if_weibo"
                    android:textColor="@color/selector_refund_proces_grey_red_selected"
                    android:textSize="@dimen/sp_of_20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_visit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/vistor_num"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_of_13" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_10"
                    android:singleLine="true"
                    android:text="@string/a_time"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/sp_of_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginTop="@dimen/dp_of_10"
        android:background="@color/color_e3" />
</LinearLayout>