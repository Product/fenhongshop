<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />

        <Button
            android:id="@+id/btn_bonus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/dp_of_20"
            android:background="@drawable/bg_of_btn_bonus"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_18"
            android:textStyle="bold"
            android:visibility="invisible" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/LActiton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/color_33"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/tv_padding_5"
            android:paddingLeft="@dimen/dp_of_10"
            android:paddingRight="@dimen/dp_of_10"
            android:paddingTop="@dimen/tv_padding_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/tv_padding_3">

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tv_padding_5"
                        android:text="@string/count_ordermoney"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_of_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/tv_padding_3">

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tv_padding_5"
                        android:text="@string/count_num"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_of_12" />

                    <TextView
                        android:id="@+id/tv_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/tv_padding"
                        android:text="@string/count_fee"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_of_12" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_yellow"
            android:layout_width="@dimen/dp_of_100"
            android:layout_height="match_parent"
            android:background="@drawable/selector_enable_yellow_gray"
            android:gravity="center"
            android:text="@string/express_info"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_16" />

        <View
            android:layout_width="@dimen/line_width"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <TextView
            android:id="@+id/tv_red"
            android:layout_width="@dimen/dp_of_100"
            android:layout_height="match_parent"
            android:background="@drawable/selector_color_calculate"
            android:gravity="center"
            android:text="@string/order_to_pay"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_16" />
    </LinearLayout>
</LinearLayout>