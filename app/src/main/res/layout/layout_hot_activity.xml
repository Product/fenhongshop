<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_of_220"
        android:layout_weight="1">


        <include
            android:id="@+id/viewMiaosha"
            layout="@layout/item_home_miaoshagoods" />

        <LinearLayout
            android:id="@+id/LMiaosha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAdvMiaosha"
                android:layout_width="@dimen/dp_of_180"
                android:layout_height="@dimen/dp_of_180"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_avatar" />
        </LinearLayout>
    </FrameLayout>

    <View
        android:layout_width="@dimen/line_width"
        android:layout_height="@dimen/dp_of_220"
        android:background="#e3e3e3" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_of_220"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_110"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAdv1"
                android:layout_width="@dimen/dp_of_170"
                android:layout_height="@dimen/dp_of_110"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_newhome_advright" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width"
            android:background="#e3e3e3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_110"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAdv2"
                android:layout_width="@dimen/dp_of_170"
                android:layout_height="@dimen/dp_of_110"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/default_newhome_advright" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>