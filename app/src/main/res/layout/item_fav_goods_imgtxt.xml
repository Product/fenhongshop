<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_of_8"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">

        <ImageView
            android:id="@+id/sdv"
            android:contentDescription="@string/qrcode_cancel"
            android:layout_width="@dimen/dp_of_80"
            android:layout_height="@dimen/dp_of_80"
            android:scaleType="fitXY"
            android:src="@drawable/default_goods_img"/>

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:text="@string/app_name"
            android:textColor="@color/color_33"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"/>
</LinearLayout>