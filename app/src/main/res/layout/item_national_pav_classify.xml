<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="@dimen/dp_of_10"
        android:id="@+id/iv_item_classify"
        android:layout_width="@dimen/dp_of_75"
        android:layout_height="@dimen/dp_of_75"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/default_avatar"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/tv_item_classify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_of_10"
        android:singleLine="true"
        android:layout_marginBottom="@dimen/dp_of_10"
        android:text="美迪惠尔"
        android:textSize="@dimen/sp_of_12"
        android:textColor="@color/color_99"/>

</LinearLayout>