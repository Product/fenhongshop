<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scv_top"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_of_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="@dimen/dp_of_20">

            <TextView
                android:id="@+id/tv_icon_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:text="@string/if_success"
                android:textColor="@color/color_lv"
                android:textSize="@dimen/dp_of_18" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_of_5"
                android:text="@string/refund_success"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_16" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingLeft="@dimen/dp_of_33"
            android:paddingRight="@dimen/dp_of_10">

            <TextView
                android:id="@+id/tv_text_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_10"
                android:text="@string/return_goods_money_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_text_money"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:layout_toRightOf="@id/tv_text_money"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_text_money"
                android:layout_marginBottom="@dimen/dp_of_10"
                android:layout_marginTop="@dimen/dp_of_10"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_check_refund"
                android:layout_width="@dimen/dp_of_100"
                android:layout_height="@dimen/dp_of_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_redsolid_corner"
                android:gravity="center"
                android:text="@string/check_refund"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_of_15" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_consult_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_8"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_46"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_of_10"
                android:text="@string/consult_detail"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_46"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:text="@string/merchantin_shopname_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_46"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:text="@string/return_goods_type_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_refund_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_46"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:text="@string/return_goods_money_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_refund_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_46"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:text="@string/return_goods_reason_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_refund_reason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white"
            android:minHeight="@dimen/dp_of_46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="top"
                android:paddingTop="@dimen/dp_of_10"
                android:text="@string/return_goods_desc_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_refund_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:layout_marginRight="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_46"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:text="@string/return_goods_num_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_refund_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_46"
            android:layout_marginTop="@dimen/dp_of_1"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:text="@string/return_goods_apply_time_"
                android:textColor="@color/color_99"
                android:textSize="@dimen/dp_of_14" />

            <TextView
                android:id="@+id/tv_apply_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:gravity="center_vertical"
                android:textColor="@color/color_33"
                android:textSize="@dimen/dp_of_14" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_120"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="@dimen/dp_of_10" />

    </LinearLayout>

</ScrollView>