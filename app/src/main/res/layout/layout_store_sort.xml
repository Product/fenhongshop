<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LGrp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_50"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/if_store_home"
                android:textColor="@color/selector_tab_txt_color"
                android:textSize="@dimen/sp_of_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_8"
                android:text="@string/tab_home"
                android:textColor="@color/selector_tab_txt_color"
                android:textSize="@dimen/sp_of_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LAll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/selector_tab_txt_color"
                android:textSize="@dimen/sp_of_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_8"
                android:text="@string/all_goods"
                android:textColor="@color/selector_tab_txt_color"
                android:textSize="@dimen/sp_of_14"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LNew"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textColor="@color/selector_tab_txt_color"
                android:textSize="@dimen/sp_of_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_8"
                android:text="@string/lasted_goods"
                android:textColor="@color/selector_tab_txt_color"
                android:textSize="@dimen/sp_of_14"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_1"
        android:background="@color/color_e3"/>
    <LinearLayout
        android:id="@+id/LBotStikky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LSort"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_35"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/tv_padding">

            <TextView
                android:id="@+id/tv_default"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/default_filter"
                android:textColor="@color/selector_tab_txt_color"/>

            <TextView
                android:id="@+id/tv_sales"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/salesnum"
                android:textColor="@color/selector_tab_txt_color"/>

            <LinearLayout
                android:id="@+id/Lprice"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/price"
                    android:textColor="@color/selector_tab_txt_color"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tv_padding_3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/if_trigup"
                        android:textColor="@color/selector_trig_txt_color"
                        android:textSize="@dimen/sp_of_6"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tv_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/line_width_1"
                        android:gravity="center"
                        android:text="@string/if_trigdown"
                        android:textColor="@color/selector_trig_txt_color"
                        android:textSize="@dimen/sp_of_6"
                        android:visibility="visible"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_popular"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/popular"
                android:textColor="@color/selector_tab_txt_color"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:background="@color/color_e3"/>
    </LinearLayout>
</LinearLayout>