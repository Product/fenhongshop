<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/comtop_height"
    android:background="@color/white">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/comtop_height"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:scaleType="center"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_of_60"
        android:paddingRight="@dimen/dp_of_60"
        android:singleLine="true"
        android:textColor="@color/color_33"
        android:textSize="@dimen/comtop_headtv_size" />

    <View
        android:id="@+id/vBottomLine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp_of_10" />

    <TextView
        android:id="@+id/tvExtra"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/comtop_height"
        android:layout_toLeftOf="@+id/FMore"
        android:gravity="center"
        android:padding="@dimen/tv_padding"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_16"
        android:visibility="invisible" />

    <FrameLayout
        android:id="@+id/FMore"
        android:layout_width="@dimen/comtop_height"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_of_2">

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/dp_of_20"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/more"
            android:visibility="gone" />

        <View
            android:id="@+id/msgDot"
            android:layout_width="@dimen/dp_of_6"
            android:layout_height="@dimen/dp_of_6"
            android:layout_gravity="top|right"
            android:layout_marginRight="@dimen/dp_of_10"
            android:layout_marginTop="@dimen/dp_of_13"
            android:background="@drawable/shape_circle_red"
            android:visibility="gone" />
    </FrameLayout>


</RelativeLayout>
