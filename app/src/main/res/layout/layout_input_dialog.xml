<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LContainer"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LSubContainer"
            android:layout_width="@dimen/dp_of_280"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_whitesolid_corner"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/dp_of_20">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_10"
                android:text="@string/title_talent_input_shortname"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_16" />

            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_30"
                android:layout_marginTop="@dimen/dp_of_30"
                android:background="@null"
                android:gravity="bottom"
                android:hint="@string/hint_talent_input"
                android:maxLength="30"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_13" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:layout_marginTop="@dimen/tv_padding_4"
                android:background="@color/color_e3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_20"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="@dimen/dp_of_95"
                    android:layout_height="@dimen/dp_of_40"
                    android:background="@drawable/shape_yellow_corner"
                    android:text="@android:string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_17" />

                <Button
                    android:id="@+id/btnOK"
                    android:layout_width="@dimen/dp_of_95"
                    android:layout_height="@dimen/dp_of_40"
                    android:layout_marginLeft="@dimen/dp_of_50"
                    android:background="@drawable/shape_redsolid_corner"
                    android:text="@android:string/ok"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_17" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
