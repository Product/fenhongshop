<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_whitesolid_corner"
        android:gravity="center"
        android:minWidth="@dimen/dp_of_300"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivNiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_niu_happy" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_14"
            android:text="续费成功"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_18" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_18"
            android:text="快去购物吧 尊贵的VIP会员"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_13" />

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="@dimen/dp_of_250"
            android:layout_height="@dimen/dp_of_40"
            android:layout_marginBottom="@dimen/dp_of_17"
            android:layout_marginTop="@dimen/dp_of_25"
            android:background="@drawable/shape_redsolid_corner"
            android:gravity="center"
            android:text="去购物"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_15" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_of_20"
        android:contentDescription="@string/app_name"
        android:src="@drawable/img_niu_close" />

</LinearLayout>