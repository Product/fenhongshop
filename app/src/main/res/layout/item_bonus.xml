<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp_of_10">

    <CheckBox
        android:id="@+id/cb"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:button="@drawable/selector_checkbox_red_gray"
        android:checked="true"
        android:gravity="center"
        android:textColor="@color/color_33"
        android:textSize="@dimen/sp_of_14" />

    <LinearLayout
        android:id="@+id/LBG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_coupon"
        android:paddingTop="@dimen/dp_of_10"
        android:paddingBottom="@dimen/dp_of_10"
        android:paddingLeft="@dimen/dp_of_16"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/own_store_limit"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_12" />


            <TextView
                android:id="@+id/tv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/lbl_use_rightnow"
                android:textColor="@color/color_33"
                android:layout_marginRight="@dimen/dp_of_10"
                android:textSize="@dimen/sp_of_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_of_20"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dp_of_100"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yuan"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_of_14" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textColor="@color/color_33"
                        android:textSize="@dimen/sp_of_25" />
                </LinearLayout>

                <TextView
                    android:layout_marginTop="@dimen/dp_of_5"
                    android:id="@+id/tv_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="无门槛使用"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_12" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivSpliter"
                android:layout_marginLeft="@dimen/dp_of_25"
                android:layout_marginRight="@dimen/dp_of_10"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_spliter_coupons"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/fh_red"
                    android:textSize="@dimen/sp_of_18" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_marginTop="@dimen/dp_of_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/own_store_time_limit"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/sp_of_12" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>


</LinearLayout>