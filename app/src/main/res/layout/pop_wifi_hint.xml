<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_33"
        android:gravity="center_vertical"
        android:background="@color/color_99"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:contentDescription="@string/qrcode_cancel"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_of_7"
            android:src="@drawable/wifi" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:layout_weight="1"
            android:text="@string/hint_no_wifi"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_13" />

        <ImageView
            android:layout_width="@dimen/dp_of_10"
            android:contentDescription="@string/qrcode_cancel"
            android:layout_height="@dimen/dp_of_10"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_of_10"
            android:src="@drawable/ic_arrow_right" />
    </LinearLayout>
</LinearLayout>