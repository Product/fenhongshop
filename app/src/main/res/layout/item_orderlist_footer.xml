<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_45"
        android:gravity="center|right"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10">

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共1件"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_13" />

        <TextView
            android:id="@+id/tvPayPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:text="合计："
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_13" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥666.66"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_13" />

        <TextView
            android:id="@+id/tvFreight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:text="(运费：¥0.00)"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_13" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:paddingBottom="@dimen/dp_of_15"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="@dimen/dp_of_80"
            android:layout_height="@dimen/dp_of_30"
            android:background="@drawable/shape_gray99_stroke_corner"
            android:text="查看物流"
            android:textColor="@color/color_bb"
            android:textSize="@dimen/sp_of_14" />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="@dimen/dp_of_80"
            android:layout_height="@dimen/dp_of_30"
            android:layout_marginLeft="@dimen/dp_of_20"
            android:background="@drawable/shape_redstroke_corner"
            android:text="付款"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>
</LinearLayout>