<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_of_10">

        <CheckBox
            android:id="@+id/cb"
            android:layout_width="@dimen/dp_of_30"
            android:layout_height="match_parent"
            android:button="@drawable/selector_checkbox_red_gray"
            android:checked="true"
            android:textColor="@color/color_33"
            android:visibility="invisible" />

        <ImageView
            android:contentDescription="@string/qrcode_cancel"
            android:id="@+id/sdv"
            android:layout_width="@dimen/dp_of_100"
            android:layout_height="@dimen/dp_of_100"
            android:scaleType="fitXY"
            android:src="@drawable/default_goods_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_of_10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LFlag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivNationFlag"
                    android:layout_width="@dimen/dp_of_20"
                    android:layout_height="@dimen/dp_of_14"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_banner" />

                <TextView
                    android:id="@+id/tvNationDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_6"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/app_name"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_of_10"
                android:layout_marginTop="@dimen/dp_of_10"
                android:lineSpacingExtra="@dimen/dp_of_5"
                android:lines="2"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_14"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/nine"
                    android:textColor="@color/selector_enable_33_bb"
                    android:textSize="@dimen/sp_of_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/nine"
                    android:textColor="@color/selector_enable_red_bb"
                    android:textSize="@dimen/sp_of_15"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_bonus_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_of_8"
        android:layout_marginLeft="@dimen/dp_of_25"
        android:text="@string/a_time"
        android:textColor="@color/color_99"
        android:textSize="@dimen/sp_of_10"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />
</LinearLayout>

