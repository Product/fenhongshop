<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dp_of_315"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_18"
            android:text="@string/title_update_fmt"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16"/>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="@dimen/dp_of_18"
            android:layout_marginLeft="@dimen/dp_of_30"
            android:layout_marginRight="@dimen/dp_of_30"
            android:text="@string/content_update"
            android:textSize="@dimen/dp_of_15"
            android:textColor="@color/color_66"/>

        <ProgressBar
            android:id="@+id/number_progress_bar"
            style="@style/FHHorizonalProgressBar"
            android:layout_marginTop="@dimen/dp_of_10"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_50"
            android:layout_marginTop="@dimen/dp_of_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_btn_cancel"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_17"/>

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_btn_cancel"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_17"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>