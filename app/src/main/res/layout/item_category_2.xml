<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/tv_padding_3"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">

        <ImageView
            android:id="@+id/sdv"
            android:contentDescription="@string/qrcode_cancel"
            android:layout_width="@dimen/dp_of_60"
            android:layout_height="@dimen/dp_of_60"
            android:scaleType="fitXY"
            android:src="@drawable/default_goods_img"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_8"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14"/>
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</LinearLayout>

