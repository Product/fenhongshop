<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/com_bg">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/com_bg" />

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pullToRefreshListView"
        style="@style/FHRefreshStyle"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/mheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_padding_4"
                android:background="@drawable/repeate_spliter" />

            <LinearLayout
                android:id="@+id/LAddr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_120"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dp_of_10"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/tv_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/if_account"
                                android:textColor="@color/fh_red"
                                android:textSize="@dimen/sp_of_15" />

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:padding="@dimen/tv_padding"
                                android:text="@string/app_name"
                                android:textColor="@color/color_33"
                                android:textSize="@dimen/sp_of_15" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_of_40"
                                android:text="@string/if_phone"
                                android:textColor="@color/fh_red"
                                android:textSize="@dimen/sp_of_15" />

                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:padding="@dimen/tv_padding"
                                android:text="@string/zero"
                                android:textColor="@color/color_33"
                                android:textSize="@dimen/sp_of_15" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/tv_padding"
                            android:singleLine="true"
                            android:text="@string/qingdao"
                            android:textColor="@color/color_99"
                            android:textSize="@dimen/sp_of_15" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/if_2right"
                        android:textSize="@dimen/sp_of_15"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_padding_4"
                android:background="@drawable/repeate_spliter" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_8"
                android:layout_gravity="bottom" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:background="@color/color_e3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_of_10"
            android:text="@string/tips_order_auto_cancel"
            android:textColor="@color/fh_red"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:background="@color/color_e3" />

        <LinearLayout
            android:id="@+id/LActiton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_50"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/color_33"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/tv_padding_5"
                android:paddingLeft="@dimen/dp_of_10"
                android:paddingRight="@dimen/dp_of_10"
                android:paddingTop="@dimen/tv_padding_5">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/tv_padding_5"
                    android:text="@string/count_money"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_of_15" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/selector_color_calculate"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_of_20"
                android:paddingRight="@dimen/dp_of_20"
                android:text="@string/order_to_pay"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>