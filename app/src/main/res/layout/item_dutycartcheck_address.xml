<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.fanglin.fhui.FHSwipeLayout
        android:id="@+id/mSwipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_of_12"
            android:paddingRight="@dimen/dp_of_12"
            android:paddingTop="@dimen/dp_of_15">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="张宝宝　　　156****5775"
                android:textSize="@dimen/sp_of_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_of_15">

                <TextView
                    android:id="@+id/tvAddr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="@dimen/dp_of_15"
                    android:text="山东省青岛市市南区软件园7号楼7楼 芳林信息"
                    android:textColor="@color/color_99"
                    android:textSize="@dimen/sp_of_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_of_35"
                    android:background="@drawable/selector_stroke"
                    android:gravity="center|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMinus"
                        android:layout_width="@dimen/dp_of_30"
                        android:layout_height="@dimen/dp_of_30"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="@color/color_66" />

                    <View
                        android:layout_width="@dimen/line_width"
                        android:layout_height="match_parent"
                        android:background="@color/color_e3" />

                    <TextView
                        android:id="@+id/tvNum"
                        android:layout_width="@dimen/dp_of_50"
                        android:layout_height="@dimen/dp_of_30"
                        android:gravity="center"
                        android:text="@string/one"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/sp_of_16" />

                    <View
                        android:layout_width="@dimen/line_width"
                        android:layout_height="match_parent"
                        android:background="@color/color_e3" />

                    <TextView
                        android:id="@+id/tvPlus"
                        android:layout_width="@dimen/dp_of_30"
                        android:layout_height="@dimen/dp_of_30"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/color_66" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"
                android:background="@color/color_e3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/dp_of_75"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fh_red"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_of_20"
                android:paddingRight="@dimen/dp_of_20"
                android:text="@string/delete"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_16" />
        </LinearLayout>
    </com.fanglin.fhui.FHSwipeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp" />


</LinearLayout>