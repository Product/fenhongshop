<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/vTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_8"
        android:background="@color/com_bg" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/com_bg" />

    <LinearLayout
        android:id="@+id/LStore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/dp_of_10">

        <TextView
            android:id="@+id/tvIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/if_store"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_16" />

        <TextView
            android:id="@+id/tvStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding_4"
            android:text="@string/store"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_15" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_of_1"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvStatu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding_4"
            android:text="@string/store"
            android:textColor="@color/fh_red"
            android:textSize="@dimen/sp_of_15" />
    </LinearLayout>

    <com.fanglin.fhui.flowlayout.TagFlowLayout
        android:id="@+id/goodsFlow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:max_select="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_50"
        android:background="@color/white"
        android:gravity="right|center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goods_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:text="@string/count_num"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_14" />

        <TextView
            android:id="@+id/tv_order_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:padding="@dimen/tv_padding"
            android:text="@string/calculate"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/yuan"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/zero"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_18"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_goods_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tv_padding"
            android:text="@string/freight_all"
            android:textColor="@color/color_66"
            android:textSize="@dimen/sp_of_14" />
    </LinearLayout>
</LinearLayout>