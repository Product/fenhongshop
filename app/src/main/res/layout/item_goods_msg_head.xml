<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_of_50"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_49"
                android:gravity="center"
                android:text="图文详情"
                android:textSize="@dimen/sp_of_15" />

            <View
                android:id="@+id/vDetail"
                android:layout_width="@dimen/dp_of_85"
                android:layout_height="@dimen/dp_of_1"
                android:background="@color/fh_red" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAttr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_of_49"
                android:gravity="center"
                android:text="单品参数"
                android:textSize="@dimen/sp_of_15" />

            <View
                android:id="@+id/vAttr"
                android:layout_width="@dimen/dp_of_85"
                android:layout_height="@dimen/dp_of_1"
                android:background="@color/fh_red" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />

</LinearLayout>