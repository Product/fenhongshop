<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_of_10"
        android:paddingRight="@dimen/dp_of_10">

        <View
            android:id="@+id/vline_top"
            android:layout_width="@dimen/line_width_1"
            android:layout_height="@dimen/dp_of_15"
            android:background="@color/color_99" />

        <View
            android:id="@+id/vdot"
            android:layout_width="@dimen/dp_of_15"
            android:layout_height="@dimen/dp_of_15"
            android:background="@drawable/selector_circle_gray" />

        <View
            android:layout_width="@dimen/line_width_1"
            android:layout_height="match_parent"
            android:background="@color/color_99" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_of_15">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_15" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_of_10"
                android:text="@string/a_time"
                android:textColor="@color/color_99"
                android:textSize="@dimen/sp_of_13" />
        </LinearLayout>

        <View
            android:id="@+id/vline_bot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_width_1"
            android:layout_marginLeft="@dimen/dp_of_15"
            android:background="@color/color_99" />
    </LinearLayout>

</LinearLayout>