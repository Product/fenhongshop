<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_of_10">

        <TextView
            android:id="@+id/tv_goodsname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_of_51"
            android:lines="2"
            android:ellipsize="end"
            android:paddingTop="@dimen/dp_of_1"
            android:text="@string/app_name"
            android:textColor="@color/color_33"
            android:textSize="@dimen/sp_of_14"
            android:textStyle="normal" />

        <FrameLayout
            android:layout_width="@dimen/dp_of_150"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_goods_img"
                android:layout_width="@dimen/dp_of_150"
                android:layout_height="@dimen/dp_of_150"
                android:contentDescription="@string/app_name"
                android:src="@drawable/default_goods_img" />

            <TextView
                android:id="@+id/tv_saleout_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/color_70percent"
                android:gravity="center"
                android:padding="@dimen/tv_padding"
                android:text="@string/miaosha_sale_out"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_of_14"
                android:visibility="gone" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_of_25"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miaosha_price"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_12" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nine"
                android:textColor="@color/fh_red"
                android:textSize="@dimen/sp_of_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_of_10"
                android:text="@string/miaosha_origin_price"
                android:textColor="@color/color_33"
                android:textSize="@dimen/sp_of_12" />

            <TextView
                android:id="@+id/tv_goods_origin_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nine"
                android:textColor="@color/color_bb"
                android:textSize="@dimen/sp_of_11" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_btn"
            android:layout_width="@dimen/dp_of_130"
            android:layout_height="@dimen/dp_of_35"
            android:layout_marginTop="@dimen/dp_of_20"
            android:background="@drawable/shape_redsolid_corner"
            android:gravity="center"
            android:text="@string/miaosha_rightnow"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_of_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_of_18"
            android:layout_marginTop="@dimen/dp_of_18"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sales_status"
                android:layout_width="@dimen/dp_of_55"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="@string/sale_percent"
                android:textColor="@color/color_bb"
                android:textSize="@dimen/sp_of_12" />

            <ProgressBar
                android:id="@+id/pb_goods_percent"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="@dimen/dp_of_130"
                android:layout_height="@dimen/dp_of_8"
                android:layout_marginBottom="@dimen/dp_of_4"
                android:layout_marginLeft="@dimen/dp_of_5"
                android:layout_marginRight="@dimen/dp_of_60"
                android:max="100"
                android:progress="59"
                android:progressDrawable="@drawable/style_fh_progressbar" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:background="@color/color_e3" />
</LinearLayout>